<UserControl x:Class="WpfExecutor.Control.SizeControl"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:common1="clr-namespace:WpfConverters.Converters.Common;assembly=WpfConverters"
         xmlns:system="clr-namespace:System;assembly=mscorlib"
         xmlns:model="clr-namespace:WpfExecutor.Model"
         xmlns:impl="clr-namespace:WpfConverters.Controls.Impl;assembly=WpfConverters"
         xmlns:localization="clr-namespace:WpfExecutor.Extensions.Localization"
         mc:Ignorable="d" d:DesignHeight="30" d:DesignWidth="300" 
         d:DataContext="{d:DesignInstance Type=model:PropModel}"
         HorizontalAlignment="Stretch" VerticalContentAlignment="Center" x:Name="Control">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition MinWidth="70"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition MinWidth="70"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center" Text="{localization:Localization Key=Text_Width}" />
        <impl:Int32UpDown Grid.Column="1" Value="{Binding Value.WidthX}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBlock Margin="5,0,0,0" Grid.Column="2" TextAlignment="Center" VerticalAlignment="Center" Text="{localization:Localization Key=Text_Height}" />
        <impl:Int32UpDown Grid.Column="3" Value="{Binding Value.HeightY}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    </Grid>
</UserControl>

